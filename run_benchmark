#!/usr/bin/env python
import os
import sys

benchmarks = {'APL-BFS': 'average_path_length_BFS',
              'APL-BF': 'average_path_length_bellman_ford'}

if len(sys.argv) < 2:
    raise Exception("Wrong number of arguments")

n_repeats = "1"
if len(sys.argv) > 2:
    n_repeats = sys.argv[2]

n_runs = "1"
if len(sys.argv) > 3:
    n_runs = sys.argv[3]

algorithm = sys.argv[1].upper()
if not algorithm in benchmarks:
    raise Exception("algorithm not found")

print('RUNNING:', algorithm, n_repeats, n_runs)

module = benchmarks[algorithm]
os.system('python -m benchmark.' + module + ' ' + n_runs + ' ' + n_repeats)
